<?xml version="1.0" encoding="UTF-8"?>
<t t-name="dark_mode_knk_patch.SystrayItem">
    <div class="o_web_studio_navbar_item d-md-inline-block" t-on-click.prevent="_onClick">
        <button 
           class="o_nav_entry"
           aria-expanded="false"
           type="button"
           title="Toggle Dark/Light Mode">
                <i id="moon_button" class="fa fa-moon-o" role="img"
                   t-attf-class="fa fa-moon-o #{this.state.color_scheme == 'dark' ? 'd-none' : ''}" />
                <i id="sun_button" class="fa fa-sun-o " role="img" t-attf-class="fa fa-sun-o #{this.state.color_scheme == 'light' ? 'd-none' : ''}" />
        </button>
    </div>
</t>
